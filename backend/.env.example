# ========================================
# Backend Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# ========================================
# Google OAuth Credentials
# ========================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
# 1. Create/select a project
# 2. APIs & Services > Credentials > Create OAuth 2.0 Client ID
# 3. Copy Client ID and Secret here
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ========================================
# Frontend URL
# ========================================
# The URL where your React frontend is hosted
# Production (Vercel): https://mailxpert.vercel.app
# Local dev: http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ========================================
# OAuth Redirect URI
# ========================================
# Must match EXACTLY in Google OAuth settings (Authorized redirect URIs)
# Production (Render): https://your-backend.onrender.com/auth/callback
# Local dev: http://localhost:8000/auth/callback
OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback

# ========================================
# AI Model Path
# ========================================
# Path to your email classification model directory
# Production (Render): backend/ai_model/email_classification_model
# Local dev: backend/ai_model/email_classification_model OR absolute path
MODEL_PATH=backend/ai_model/email_classification_model

# ========================================
# CORS Allowed Origins (Optional)
# ========================================
# Comma-separated list of allowed origins for CORS
# If not set, defaults to FRONTEND_URL
# Production example: https://mailxpert.vercel.app,https://www.mailxpert.com
# Local dev: http://localhost:3000,http://127.0.0.1:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ========================================
# Data Store Paths (Optional)
# ========================================
# Custom paths for JSON data stores (leave commented to use defaults)
# PROCESSED_STORE_PATH=backend/processed_ids.json
# PROCESSED_EMAILS_STORE_PATH=backend/processed_emails.json
# SESSION_STORE_PATH=backend/session_store.json
