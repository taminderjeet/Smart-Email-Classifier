# ========================================
# Frontend Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!
# For Create React App, variables must be prefixed with REACT_APP_

# ========================================
# Backend API URL
# ========================================
# The URL where your FastAPI backend is hosted
# Production (Render): https://your-backend.onrender.com
# Local dev: http://localhost:8000
# NOTE: No trailing slash!
REACT_APP_API_URL=http://localhost:8000

# ========================================
# Google OAuth Client ID
# ========================================
# Get this from Google Cloud Console: https://console.cloud.google.com/
# Must be the SAME Client ID used in backend
# This is safe to expose in frontend (it's public anyway)
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
